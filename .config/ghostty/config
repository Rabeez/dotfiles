# https://github.com/KroneCorylus/ghostty-shader-playground/tree/main/shaders
custom-shader = shaders/cursor_smear.glsl

theme = dark:catppuccin-mocha,light:catppuccin-latte
macos-titlebar-style = hidden
font-family = Maple Mono NF Medium
font-size = 16
adjust-cell-height = 10%
macos-option-as-alt = left
confirm-close-surface = false
# macos-icon = xray

# Tmux leader (Ctrl+a) followed by specific commands
# https://github.com/ghostty-org/ghostty/discussions/3493#discussioncomment-11719581
keybind = cmd+t=text:\x01c  # send tmux-leader + c
keybind = cmd+w=text:\x01x  # send tmux-leader + x
keybind = cmd+z=text:\x01z  # send tmux-leader + z
keybind = cmd+l=text:\x01L  # send tmux-leader + L
keybind = cmd+1=text:\x011  # send tmux-leader + 1
keybind = cmd+2=text:\x012  # send tmux-leader + 2
keybind = cmd+3=text:\x013  # send tmux-leader + 3
keybind = cmd+4=text:\x014  # send tmux-leader + 4
keybind = cmd+5=text:\x015  # send tmux-leader + 5
